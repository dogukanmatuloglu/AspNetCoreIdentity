@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Roles</h1>
<table class="table table-bordered table-striped">


    <tr>
        <th>Id</th>
        <th>Rol İsmi</th>
        <th>Silme</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
    <td>@item.Id</td>
    <td>@item.Name</td> 
        <td>
            <form  asp-route-id="@item.Id" method="post" asp-action="RoleDelete" >
                <button class="btn btn-success">Sil</button>
            

            </form>
        </td>
    </tr>
      
    }

</table>
<a asp-action="RoleCreate" class="btn btn-info"> Role Oluştur</a>

