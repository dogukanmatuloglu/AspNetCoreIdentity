@model WepApp.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}


<div class="row">
    <div class="col-md-4 offset-md-4">
        <h4>Şifre Yenileme Alanı</h4>
        <hr />
        <form asp-action="ResetPasswordConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NewPassWord" class="control-label"></label>
                <input asp-for="NewPassWord" class="form-control" />
                <span asp-validation-for="NewPassWord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yeni Şifre Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


