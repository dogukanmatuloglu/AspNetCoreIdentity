<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/jquery/jquery.js"></script>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        
            <div class="container">
                <a class="navbar-brand" href="#">Identity.com</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-action="Index">Üye Anasayfa</a>
                        </li>
                       
                        

                    </ul>
                </div>
            </div>
        
    </nav>
    <div class=" container">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3>Menü</h3>
                <a class="btn btn-info btn-toolbar" asp-action="PasswordChange" asp-controller="Member">Şifre Değiştirme</a>
                <a class="btn btn-info btn-toolbar" asp-action="UserEdit" asp-controller="Member">Bilgi Güncelleme </a>
                <a class="btn btn-info btn-toolbar" asp-action="LogOut" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış Yap</a>



            </div>
        </div>
     
    </div>
</body>
</html>
